{
  "variables": {
    "faasd_version": "0.9.9",
    "inlets_oss_version": "2.7.10",
    "inlets_pro_version": "0.7.2",
    "caddy_version": "2.1.1"
  },
  "builders": [
    {
      "name": "faasd",
      "type": "arm-image",
      "image_type": "raspberrypi",
      "output_filename": "images/rpi-faasd.img",
      "iso_url": "http://cdimage.ubuntu.com/releases/20.04.1/release/ubuntu-20.04.1-preinstalled-server-arm64+raspi.img.xz",
      "iso_checksum_type": "sha256",
      "iso_checksum": "aadc64a1d069c842e56a4289fe1a6b4b5a0af4efcf95bcce78eb2a80fe5270f4",
      "qemu_binary": "qemu-aarch64-static",
      "image_mounts": [
        "/boot/firmware",
        "/"
      ],
      "additional_chroot_mounts": [
        [
          "bind",
          "/run/systemd",
          "/run/systemd"
        ]
      ]
    },
    {
      "name": "faasd-inlets-oss",
      "type": "arm-image",
      "image_type": "raspberrypi",
      "output_filename": "images/rpi-faasd-inlets-oss.img",
      "iso_url": "http://cdimage.ubuntu.com/releases/20.04.1/release/ubuntu-20.04.1-preinstalled-server-arm64+raspi.img.xz",
      "iso_checksum_type": "sha256",
      "iso_checksum": "aadc64a1d069c842e56a4289fe1a6b4b5a0af4efcf95bcce78eb2a80fe5270f4",
      "qemu_binary": "qemu-aarch64-static",
      "image_mounts": [
        "/boot/firmware",
        "/"
      ],
      "additional_chroot_mounts": [
        [
          "bind",
          "/run/systemd",
          "/run/systemd"
        ]
      ]
    },
    {
      "name": "faasd-inlets-pro",
      "type": "arm-image",
      "image_type": "raspberrypi",
      "output_filename": "images/rpi-faasd-inlets-pro.img",
      "iso_url": "http://cdimage.ubuntu.com/releases/20.04.1/release/ubuntu-20.04.1-preinstalled-server-arm64+raspi.img.xz",
      "iso_checksum_type": "sha256",
      "iso_checksum": "aadc64a1d069c842e56a4289fe1a6b4b5a0af4efcf95bcce78eb2a80fe5270f4",
      "qemu_binary": "qemu-aarch64-static",
      "image_mounts": [
        "/boot/firmware",
        "/"
      ],
      "additional_chroot_mounts": [
        [
          "bind",
          "/run/systemd",
          "/run/systemd"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "FAASD_VERSION={{user `faasd_version`}}"
      ],
      "scripts": [
        "scripts/ubuntu/install-containerd.sh",
        "scripts/generic/install-cni-plugins.sh",
        "scripts/generic/install-faasd.sh"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "INLETS_OSS_VERSION={{user `inlets_oss_version`}}"
      ],
      "scripts": [
        "scripts/generic/install-inlets-oss.sh"
      ],
      "only": [
        "faasd-inlets-oss"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "INLETS_PRO_VERSION={{user `inlets_pro_version`}}",
        "CADDY_VERSION={{user `caddy_version`}}"
      ],
      "scripts": [
        "scripts/generic/install-inlets-pro.sh",
        "scripts/generic/install-caddy.sh"
      ],
      "only": [
        "faasd-inlets-pro"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "dist/rpi-{{.BuildName}}-ubuntu-arm64.img.xz"
    }
  ]
}